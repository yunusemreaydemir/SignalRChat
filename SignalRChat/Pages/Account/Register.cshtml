@page
@model ChatWithSignalR.Pages.Account.RegisterModel
@{
}

<form asp-page="/Account/Register">

    <div class="form-group">
        <label>Mail Adresi</label>
        <input asp-for="UserModel.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input asp-for="UserModel.UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Şifre</label>
        <input type="password" asp-for="UserModel.Password" class="form-control" />
    </div>

    <button class="btn btn-info" type="submit">Kayıt Ol</button>

</form>